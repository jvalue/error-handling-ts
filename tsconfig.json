{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".",
		"lib": ["es2019"],
		"outDir": "dist",
		"declaration": true,
		"paths": {
			"matchers/*": [
				"dist/matchers/*"
			] 
		}
	},
	"include": ["src/**/*.ts"]
}
